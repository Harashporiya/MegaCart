generator client {
  provider = "prisma-client-js"
 // previewFeatures = ["mongodb"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid()) 
  name     String?
  email    String  @unique
  password String

  @@map("users")
}

model Fashion {
   id       String  @id @default(uuid()) 
  name          String
  brand         String
  category      Category
  accessorySize AccessorySize?
  footwearSize  FootwearSize?
  bagSize       BagSize?
  size          Size?
  price         Float
  description   String
  image         String[]

  @@map("fashions")
}

enum Category {
  WomensClothing
  MensClothing
  KidsClothing
  Accessories
  Footwear
  BagsAndLuggage
}

enum AccessorySize {
  OneSize
  Small
  Medium
  Large
}

enum FootwearSize {
  US_6
  US_7
  US_8
  US_9
  US_10
  US_11
  US_12
}

enum BagSize {
  Small
  Medium
  Large
  XLarge
  Compact
  Weekend
  Carry_On
}

enum Size {
  S
  M
  L
  SM
  XL
  XXL
  XXXL
}



model Electronic {
 id       String  @id @default(uuid()) 
  name            String
  brand           String
  model           String?
  category        CategoryElectronic
  price           Float
  description     String
  image           String[]
  stockQuantity   Int                @default(0)
  isAvailable     Boolean            @default(true)
  processorType   String?
  ramSize         Int?
  storageType     StorageType?
  storageCapacity Int?
  displaySize     Float?
  batteryCapacity Int?
  warranty        Int?
  color           String?
  weight          Float?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@map("electronics")
}

enum CategoryElectronic {
  Smartphones
  Laptops
  Tablets
  Headphones
  SmartWatches
  Speakers
  Cameras
  Printers
  GameConsoles
}

enum StorageType {
  SSD
  HDD
  EMMC
  NVMe
}



