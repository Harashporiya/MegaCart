generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id       String   @id @default(uuid())
  name     String?
  email    String   @unique
  password String
}

model Fashion {
  id          String      @id @default(uuid())
  name        String
  brand       String
  category    Category
  accessorySize      AccessorySize?
  footwearSize       FootwearSize?
  bagSize            BagSize?
  size        Size?
  price       Float
  description String
  image       String
 
}

enum Category {
  WomensClothing
  MensClothing
  KidsClothing
  Accessories
  Footwear
  BagsAndLuggage
}


enum AccessorySize {
  OneSize
  Small
  Medium
  Large
}

enum FootwearSize {
  US_6
  US_7
  US_8
  US_9
  US_10
  US_11
  US_12
}

enum BagSize {
  Small
  Medium
  Large
  XLarge
  Compact
  Weekend
  Carry_On
}

enum Size {
  S
  M
  L
  SM
  XL
  XXL
  XXXL
}

model Electronic {
  id             String              @id @default(uuid())
  name           String
  brand          String
  model          String?
  category       CategoryElectronic
  price          Float
  description    String
  image          String[]
  stockQuantity  Int                @default(0)
  isAvailable    Boolean             @default(true)
  processorType  String?
  ramSize        Int?            
  storageType    StorageType?
  storageCapacity Int?               
  displaySize    Float?              
  batteryCapacity Int?              
  warranty       Int?               
  color          String?
  weight         Float?              
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
}

enum CategoryElectronic {
  Smartphones
  Laptops
  Tablets
  Headphones
  SmartWatches
  Speakers
  Cameras
  Printers
  GameConsoles
}

enum StorageType {
  SSD
  HDD
  EMMC
  NVMe
}

model Groceries{
  id    String  @id @default(uuid())
  name String
  category CategoryGroceries
  weight  weightVegitablesAndFruites?
  SaucesWeight SaucesWeight?
  OilsAndVinegarsWeight OilsAndVinegarsWeight?
  CannedFoodsWeight CannedFoodsWeight?
  price  Float
  description    String
  image       String
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
}


enum CategoryGroceries {
  Fresh_vegetables
  Fresh_fruits
  Canned_foods
  Sauces
  Oils_and_Vinegars
}
enum weightVegitablesAndFruites {
  Gram_500
  Gram_1000
  Gram_1500
  Gram_2000
  Gram_2500
  Gram_3000
}
enum SaucesWeight {
  Gram_250
  Gram_450
  Gram_500
  Gram_1000
  Gram_1500
  Gram_2000
}
enum OilsAndVinegarsWeight {
  Ml_250
  Ml_500
  Ml_1000
  Ml_1500
  Ml_2000
}
enum CannedFoodsWeight {
  GRAM_150   
  GRAM_250   
  GRAM_400   
  GRAM_450   
  GRAM_800   
  GRAM_1000  
  GRAM_1500  
}